{
  "name": "express-respond-simple",
  "type": "module",
  "version": "1.2.4",
  "description": "Creates simple express middleware for responding any status and body.",
  "main": "dist/index.mjs",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "scripts": {
    "prepare": "run-s clean build",
    "clean": "rimraf dist",
    "build": "run-p build:*",
    "prebuild:code": "mkdirp dist",
    "prebuild:types": "mkdirp dist",
    "build:code": "(cat src/template.mjs && echo && node src/generate-exports.mjs) > dist/index.mjs",
    "build:types": "(cat src/template.d.ts && echo && node src/generate-types.mjs) > dist/index.d.ts",
    "test": "run-s lint mocha",
    "lint": "standard --fix",
    "mocha": "mocha"
  },
  "repository": "hugojosefson/express-respond-simple",
  "keywords": [
    "express",
    "respond",
    "simple",
    "response",
    "middleware",
    "http",
    "status",
    "statuscode"
  ],
  "author": "Hugo Josefson <hugo@josefson.org>",
  "license": "MIT",
  "engines": {
    "node": ">=14"
  },
  "devDependencies": {
    "@types/express": "^4.17.7",
    "@types/statuses": "^2.0.0",
    "camelcase": "^6.0.0",
    "chai": "^4.2.0",
    "chai-spies": "^1.0.0",
    "mkdirp": "^1.0.4",
    "mocha": "^8.0.1",
    "npm-run-all": "^4.1.5",
    "rimraf": "^3.0.2",
    "standard": "^14.3.4"
  },
  "dependencies": {
    "statuses": "^2.0.0"
  }
}
